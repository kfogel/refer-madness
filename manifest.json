{

  "manifest_version": 2,
  "name": "refer-madness",
  "homepage_url": "https://github.com/kfogel/refer-madness",
  "version": "1.0",

  "description": "Control when and how the \"HTTP Referer\" header is sent to web sites.",

  "icons": {
    "48": "icons/refer-madness-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*"],
      "js": ["refermadness.js"]
    }
  ],

# Not so sure about these yet

  "permissions": [
    "webRequest", "webRequestBlocking", "https://httpbin.org/*" 
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/person-32.png",
    "default_title": "Choose a user agent",
    "default_popup": "popup/choose_ua.html"
  }

}
